      $('#date_end_h').val($('#date_end').val().slice(11, 13));
      $('#date_end_mt').val($('#date_end').val().slice(14, 16));

      $('#time_rate').val($('#dropdownMenuButton').text());

      console.log($('#date_start_y').val());
    });


    $("#dropdownMenuButton").on("click", function () {
      $("#dropdown-show-rate").toggleClass("show");
    });

    $("#dropdown-show-rate a").on("click", function () {
      $("#dropdownMenuButton").html($(this).text());
      $("#dropdown-show-rate").toggleClass("show");
    });



  });

</script>