<div class="post-list">

<h2>00:00:00</h2>


{{#if posts.length}}
  {{#each posts}}
  <div class="post">
    <div class="post-info">
      <span>ID {{id}}</span>
      <p>{{post}}</p>
      <div class="dates">
        <span>{{date}}</span>
      </div>
      
    </div>
    <div class="post-delete">
      <a href='/post-list/delete/{{_id}}'>
        <img id="delete-post" src="close.svg" alt="">
      </a>
      <div class="invisible-id">{{_id}}</div>
    </div>

  </div>  
  {{/each}}
{{else}}
<p>Nothing!</p>
{{/if}}


</div>

<script>
  setInterval(() => {
    $("h2").text(new Date().toJSON().slice(0,19))
  }, 1000);

  
</script>


