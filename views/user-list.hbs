<div class="user-list">

<h2>00:00:00</h2>


{{#if users.length}}
  {{#each users}}
  <div class="user">
    <div class="user-info">
      <span>ID: {{user_id}}</span>
      <p>{{user_name}}</p>
    </div>
    <div class="user-status">

    </div>
  </div>  
  {{/each}}
{{else}}
<p>Nothing!</p>
{{/if}}


</div>

<script>
  setInterval(() => {
    $("h2").text(new Date().toJSON().slice(0,19))
  }, 1000);

  
</script>


